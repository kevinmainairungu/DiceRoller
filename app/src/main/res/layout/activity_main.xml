<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center_vertical"
    tools:context=".MainActivity">
<!--app name space is for configs specifics for you application module not the entire android system-->
<!--Scale independent Pixels (sp)-->
<!--The 'tools' namespace is used when  you want to define dummy content that is only used in the app when your using the preview screen.They are removed after the app is compiled    -->
    <ImageView
        android:id="@+id/image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="30sp"
        app:srcCompat="@drawable/empty_dice"
        tools:src="@drawable/dice_1" />
    <ImageView
        android:id="@+id/dice_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="30sp"
        app:srcCompat="@drawable/empty_dice"
        tools:src="@drawable/dice_1"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/roll"
        android:id="@+id/roll_button"
        android:layout_gravity="center_horizontal" />

        <Button

            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/royce"
            android:id="@+id/royce_button"
            android:layout_gravity="center_horizontal" />



</LinearLayout>